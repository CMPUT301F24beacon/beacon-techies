<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_pressed="true">
        <color android:color="#B3D4FC"/> <!-- Light blue for selected -->
    </item>

    <!-- Default state -->
    <item>
        <color android:color="@android:color/transparent"/> <!-- Transparent for unselected -->
    </item>
</selector>
